<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.SplashActivity"
    android:gravity="center"
    android:background="@drawable/ic_splash_background">

    <LinearLayout
        android:id="@+id/llcallout"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@drawable/callout_white"
        android:gravity="center"
        android:orientation="vertical"
        >

        <TextView
            android:id="@+id/tv_callout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="This is a comment.  I have many comments like them but this one is mine."
            android:textColor="#000000"
            android:textSize="22sp"
            android:textStyle="bold"
            android:padding="20dp"/>


    </LinearLayout>


</LinearLayout>